<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/dashboardDrawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_bacground_image">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="5dp"
            android:orientation="horizontal"
            android:background="#191818"
            android:weightSum="3">

            <ImageView
                android:id="@+id/navigationMenuToggleButton"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:src="@drawable/menu"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="#FeelTheNote"
                android:textColor="@color/colorWhite"
                android:textSize="27dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/notificationMenuToggleButton"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:src="@drawable/notification_icon"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:translationZ="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/student"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        app:civ_border_width="2dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:weightSum="2"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nisarg Mahyavanshi"
                            android:textColor="#ffffff"
                            android:textSize="23dp"
                            android:gravity="bottom"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="nisargmahyavanshi@gmail.com"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:gravity="top"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/dashboard_background"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/wave"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#409A44"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Upcoming Session - AGTR003"
                                android:textSize="23dp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="italic"
                                android:paddingLeft="20dp"
                                android:translationZ="1dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Electronic Keyboard"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingLeft="20dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tutor : Shubham Acharya"
                                        android:textSize="20dp"
                                        android:textColor="@color/black"
                                        android:paddingLeft="19dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Tommorow,  23rd Jan  15:00 - 10:00 AM"
                                        android:textSize="18dp"
                                        android:textColor="@color/black"
                                        android:textAlignment="center"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:gravity="center_horizontal"
                                        android:background="@color/colorWhite"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.github.islamkhsh.CardSliderViewPager
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewPager"
                        android:layout_marginTop="10dp"
                        app:cardSlider_smallScaleFactor="0.9"
                        app:cardSlider_otherPagesWidth="0dp"
                        app:cardSlider_pageMargin="12dp"
                        app:cardSlider_indicator="@id/indicator"
                        app:auto_slide_time="10"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <com.github.islamkhsh.CardSliderIndicator
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:id="@+id/indicator"
                            app:indicatorsToShow="20"/>
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/course2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/agtr"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ADs"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                android:paddingTop="10dp"
                                android:paddingLeft="20dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Shubham Acharya"
                                android:textSize="20dp"
                                android:textColor="@color/colorWhite"
                                android:paddingLeft="19dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
