<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/dashboard_body_card_view"
            android:backgroundTint="@color/colorPrimary"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black">
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:layout_alignParentBottom="true"
                android:weightSum="3"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="15dp"
                    app:cardBackgroundColor="@color/teal_700">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#94CF4F"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Upcoming Session"
                                android:textSize="25dp"
                                android:textColor="@color/black"
                                android:paddingLeft="20dp"
                                android:translationZ="1dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/colorWhite"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Acoustic Guitar - AGTR003"
                                            android:textSize="30dp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:paddingTop="10dp"
                                            android:paddingLeft="20dp"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Shubham Acharya"
                                            android:textSize="25dp"
                                            android:textColor="@color/black"
                                            android:textAlignment="viewEnd"
                                            android:gravity="end"
                                            android:paddingRight="10dp"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Tommorow,  23rd Jan  15:00 - 10:00 AM"
                                            android:textSize="20dp"
                                            android:textColor="@color/black"
                                            android:textAlignment="center"
                                            android:paddingTop="10dp"
                                            android:gravity="center_horizontal"
                                            android:background="@color/colorWhite"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/card4"
                    android:layout_width="500dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/card1"
                    android:layout_alignLeft="@+id/card1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/temp_card2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/temp_card2"
                        android:backgroundTint="#CDDC39"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Total alloted sessions"
                                android:textSize="23dp"
                                android:layout_weight="1.5"
                                android:textColor="@color/black"
                                android:paddingTop="2dp"
                                android:paddingLeft="20dp"/>


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:paddingTop="2dp"
                                android:paddingRight="2dp"/>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Acoustic Guitar - AGTR003"
                                    android:textSize="30dp"
                                    android:textColor="@color/black"
                                    android:paddingTop="10dp"
                                    android:paddingLeft="20dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Shubham Acharya"
                                    android:textSize="25dp"
                                    android:textColor="@color/black"
                                    android:textAlignment="viewEnd"
                                    android:gravity="end"
                                    android:paddingRight="10dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card2"
                    android:layout_width="192dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/card4"
                    android:layout_alignLeft="@+id/card1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/temp_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/temp_card"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Booked"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:paddingTop="5dp"
                            android:translationZ="1dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:weightSum="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Completed"
                                        android:textSize="23dp"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingLeft="20dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingRight="2dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Pending"
                                        android:textSize="23dp"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingLeft="20dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingRight="2dp"/>

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card3"
                    android:layout_width="192dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/card4"
                    android:layout_alignRight="@+id/card1"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/temp_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/temp_card"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unbooked"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:paddingTop="5dp"
                            android:translationZ="1dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorWhite"
                                android:weightSum="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Available"
                                        android:textSize="23dp"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingLeft="20dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="6"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingRight="2dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Expiered"
                                        android:textSize="23dp"
                                        android:layout_weight="1.5"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingLeft="20dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:paddingTop="10dp"
                                        android:paddingRight="2dp"/>

                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:layout_below="@+id/card3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="15dp"></androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>